<% include ./static/header %>
<% include ./static/sidebar %>
<% include ./static/navbar %>

<div class="col-md-6 col-lg-10-2">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <br>
            <h3 class="box-title">Reporte Mantenimientos</h3>
        </div>

        <div class="alert alert-success text-center mt-1" id='success-alert' role="alert" hidden>
            <span>Mandril Guardado</span>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="/guardar_equipo" method="POST">
            <div class="box-body">
                <!------->
                <!-- Date format yyyy-m-d -->
                <%
                     var d = new Date();
                     var mm = d.getMonth() + 1;
                     var dd = d.getDate();
                     var yy = d.getFullYear();
                     var myDateString = yy + '-' + mm + '-' + dd; //(US)
                     %>
                

                <div class="row">


                    <div class="col-lg-6">
                        <label for="inlineFormInputGroup">Fecha Inicial</label>
                        <div class="input-group ">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><span class="fas fa-calendar"></span></div>
                            </div>
                            <input type="text" class="form-control" id="fecha_inicial" name="fecha_inicial"
                                placeholder="yyyy-m-d" required autocomplete="off">
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <label for="inlineFormInputGroup">Fecha Final</label>
                        <div class="input-group ">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><span class="fas fa-calendar"></span></div>
                            </div>
                            <input type="text" class="form-control" id="fecha_final" name="fecha_final"
                                placeholder="yyyy-m-d" required autocomplete="off">
                        </div>
                    </div>
                </div>

                <br>

                <div class="box-footer">
                    <button id="btnguardar" type="submit" class="btn btn-primary"
                        onclick="$('form').attr('action', '/reporte_grafica');">Siguiente</button>
                </div>
        </form>
    </div>
    <!-- /.box -->

    <% include ./static/footer %>
</div>
</body>

</html>

<script>




    $('#fecha_inicial').datepicker({
        format: "yyyy-m-d",
        orientation: "bottom",
        todayHighlight: true
    });

    $('#fecha_final').datepicker({
        format: "yyyy-m-d",
        orientation: "bottom",
        todayHighlight: true
    });



</script>